<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/productNameReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sandwish"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/productDetailReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="sauss with adsfafa \n ads width adgsg\nhdsg width dsfgsdf"
            android:textSize="8sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/priceCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="20 * 3"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/divider17"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/removeProductReview"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/priceCount"
        app:layout_constraintStart_toEndOf="@+id/priceCount"
        app:layout_constraintTop_toTopOf="@+id/priceCount"
        app:srcCompat="@color/red" />

    <ImageView
        android:id="@+id/addButtonReview"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/removeProductReview"
        app:layout_constraintStart_toEndOf="@+id/removeProductReview"
        app:layout_constraintTop_toTopOf="@+id/removeProductReview"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/addButtonReview"
        app:layout_constraintEnd_toEndOf="@+id/addButtonReview"
        app:layout_constraintStart_toStartOf="@+id/addButtonReview"
        app:layout_constraintTop_toTopOf="@+id/addButtonReview"
        app:srcCompat="@drawable/addblack" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/removeProductReview"
        app:layout_constraintEnd_toEndOf="@+id/removeProductReview"
        app:layout_constraintStart_toStartOf="@+id/removeProductReview"
        app:layout_constraintTop_toTopOf="@+id/removeProductReview"
        app:srcCompat="@drawable/removewhite" />

    <TextView
        android:id="@+id/totalPriceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="9999.00"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/addButtonReview"
        app:layout_constraintStart_toEndOf="@+id/divider18"
        app:layout_constraintTop_toTopOf="@+id/addButtonReview" />

    <TextView
        android:id="@+id/priceUnitReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="20dp"
        android:text="MAD"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/totalPriceProduct"
        app:layout_constraintStart_toEndOf="@+id/totalPriceProduct" />

    <View
        android:id="@+id/divider13"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/priceUnitReview"
        app:layout_constraintStart_toStartOf="@+id/linearLayout" />

    <View
        android:id="@+id/divider17"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <View
        android:id="@+id/divider18"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/divider17"
        app:layout_constraintStart_toEndOf="@+id/addButtonReview"
        app:layout_constraintTop_toTopOf="@+id/divider17"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>